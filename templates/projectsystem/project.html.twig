{% extends 'partials/layout-vertical.html.twig' %}

{% block title %}Project
{% endblock %}

{% block css %}
	<!-- Datatables css -->
	<link href="/vendor/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-responsive-bs5/css/responsive.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-fixedcolumns-bs5/css/fixedColumns.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-fixedheader-bs5/css/fixedHeader.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-buttons-bs5/css/buttons.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-select-bs5/css/select.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block pagetitle %}
	<div class="row">

		<div class="col-md-6 col-xxl-3">
			<div class="card">
				<div class="card-header border-0 pb-0">
					<div class="d-flex align-items-center">
						<img src="https://liviso.net/storage/uploads/avatar/default.png" class="img-fluid wid-30 me-2" alt="">
						<h5 class="mb-0">
							<a class="text-dark" href="http://localhost/other/projects/9">Automatic</a>
						</h5>
					</div>
					<div class="card-header-right">
						<div class="btn-group card-option">
							<button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="ti ti-dots-vertical"></i>
							</button>
							<div class="dropdown-menu dropdown-menu-end">

								<a class="dropdown-item" data-ajax-popup="true" data-size="md" data-title="Duplicate Project" data-url="http://localhost/other/project/copy/9">
									<i class="ti ti-copy"></i>
									<span>Duplicate</span>
								</a>
								<a href="#!" data-size="lg" data-url="http://localhost/other/projects/9/edit" data-ajax-popup="true" class="dropdown-item" data-bs-original-title="Edit Project">
									<i class="ti ti-pencil"></i>
									<span>Edit</span>
								</a>
								<form method="POST" action="http://localhost/other/projects/9" accept-charset="UTF-8"><input name="_method" type="hidden" value="DELETE"><input name="_token" type="hidden" value="q4UTQ0S1spGLbp1qFl5N9vDcE8eW1YX3XkMwbbbv">
									<a href="#!" class="dropdown-item bs-pass-para">
										<i class="ti ti-archive"></i>
										<span>
											Delete</span>
									</a>

								</form>
								<a href="#!" data-size="lg" data-url="http://localhost/other/invite-project-member/9" data-ajax-popup="true" class="dropdown-item" data-bs-original-title="Invite User">
									<i class="ti ti-send"></i>
									<span>Invite User</span>
								</a>
							</div>
						</div>
					</div>
				</div>
				<div class="card-body">
					<div class="row g-2 justify-content-between">
						<div class="col-auto">
							<span class="badge rounded-pill bg-info">In Progress</span>
						</div>

					</div>
					<p class="text-muted text-sm mt-3">Blank</p>
					<small>MEMBERS</small>
					<div class="user-group">
						<a href="#" class="avatar rounded-circle avatar-sm">
							<img src="http://localhost/other/storage/uploads/avatar/Logo1_1692870175.jpeg" alt="image" data-bs-toggle="tooltip" title="Sabarish">
						</a>
						<a href="#" class="avatar rounded-circle avatar-sm">
							<img src="http://localhost/other/storage/uploads/avatar/avatar.png" alt="image" data-bs-toggle="tooltip" title="William Ndubuisi">
						</a>
					</div>
					<div class="card mb-0 mt-3">
						<div class="card-body p-3">
							<div class="row">
								<div class="col-6">
									<h6 class="mb-0 text-danger">17 Oct 2023</h6>
									<p class="text-muted text-sm mb-0">Start Date</p>
								</div>
								<div class="col-6 text-end">
									<h6 class="mb-0">27 Oct 2023</h6>
									<p class="text-muted text-sm mb-0">Due Date</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="row min-750" id="project_view"></div>
{% endblock %}

