{% extends 'partials/layout-vertical.html.twig' %}

{% block title %}Warehouse Report
{% endblock %}

{% block css %}
	
{% endblock %}

{% block pagetitle %}
	<div class"row align-items-center d-flex">
		<div class="col mt-2">
			<div class="float-end mt-3">
				<a href="http://localhost/other/export/accountstatement" data-bs-toggle="tooltip" title="" class="btn btn-sm btn-primary" data-bs-original-title="Export">
					<i class="bi bi-box-arrow-up"></i>
				</a>
			</div>
		</div>
		<div class="col auto">
			{{ include('partials/page-title.html.twig', { sub_title: 'Warehouse Report', page_title: 'Warehouse Report' }) }}
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="row mt-3">
		<div class="col">
			<div class="card p-4 mb-4">
				<h6 class="report-text gray-text mb-0">Report :</h6>
				<h5 class="report-text mb-0 text-dark">Warehouse Report</h5>
			</div>
		</div>
		<div class="col">
			<div class="card p-4 mb-4">
				<h6 class="report-text gray-text mb-0">Total Warehouse :</h6>
				<h5 class="report-text mb-0 text-dark">1</h5>
			</div>
		</div>

		<div class="col">
			<div class="card p-4 mb-4">
				<h6 class="report-text gray-text mb-0">Total Product :</h6>
				<h5 class="report-text mb-0 text-dark">0</h5>
			</div>
		</div>
	</div>
	<div class="col">
			<div class="card">
				<div class="card-body">
					<h4 class="header-title">Warehouse Report</h4>
					<div dir="ltr">
						<div id="column-with-group-label" class="apex-charts" data-colors="#39afd1,#17a497,#e3eaef"></div>
					</div>
				</div>
				<!-- end card body-->
			</div>
			<!-- end card -->
		</div>
	<!-- end row-->
{% endblock %}

{% block javascript %}
	<!-- Apex Chart js -->
	<script src="/vendor/apexcharts/apexcharts.min.js"></script>

	<!-- Apex Chart Column Demo js -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/dayjs/1.11.0/dayjs.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/dayjs/1.11.0/plugin/quarterOfYear.min.js"></script>
	<script src="/js/pages/demo.apex-column.js"></script>
{% endblock %}
