{% extends 'partials/layout-vertical.html.twig' %}

{% block title %}Payment
{% endblock %}

{% block css %}
	<!-- Datatables css -->
	<link href="/vendor/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-responsive-bs5/css/responsive.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-fixedcolumns-bs5/css/fixedColumns.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-fixedheader-bs5/css/fixedHeader.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-buttons-bs5/css/buttons.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-select-bs5/css/select.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block pagetitle %}
	<div class"row align-items-center d-flex">
		<div class="col mt-2">
			<div class="float-end mt-3">
				<button type="button" class="p-0 m-0 border-0" data-bs-toggle="modal" data-bs-target="#payment" data-bs-whatever="@mdo">
					<a href="#" data-bs-toggle="tooltip" title="" class="btn btn-sm btn-primary" data-bs-original-title="Import">
						<i class="bi bi-plus"></i>
					</a>
				</button>
			</div>
		</div>
		<div class="col auto">
			{{ include('partials/page-title.html.twig', { sub_title: 'Payment', page_title: 'Payment' }) }}
		</div>
	</div>
	<div class="modal fade rounded-3" id="payment" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog rounded-3">
			<div class="modal-content rounded-3">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Create New Payment</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="modal-body">
						<div class="row">
							<div class="form-group col-md-6">
								<label for="date" class="form-label">Date</label>
								<input class="form-control" required="required" name="date" type="date" id="date">
							</div>
							<div class="form-group col-md-6">
								<label for="amount" class="form-label">Amount</label>
								<input class="form-control" required="required" step="0.01" name="amount" type="number" value="" id="amount">
							</div>
							<div class="form-group col-md-6">
								<label for="account_id" class="form-label">Account</label>
								<select class="form-control select" required="required" id="account_id" name="account_id">
									<option value="51">
										cash</option>
									<option value="71">sbi ramu</option>
								</select>
							</div>
							<div class="form-group col-md-6">
								<label for="vender_id" class="form-label">Vendor</label>
								<select class="form-control select" required="required" id="vender_id" name="vender_id">
									<option value="0">--</option>
									<option value="8">Supplier 1</option>
								</select>
							</div>
							<div class="form-group  col-md-12">
								<label for="description" class="form-label">Description</label>
								<textarea class="form-control" rows="3" name="description" cols="50" id="description" spellcheck="false"></textarea>
							</div>
							<div class="form-group col-md-6">
								<label for="category_id" class="form-label">Category</label>
								<select class="form-control select" required="required" id="category_id" name="category_id"></select>
							</div>
							<div class="form-group col-md-6">
								<label for="reference" class="form-label">Reference</label>
								<input class="form-control" name="reference" type="text" value="" id="reference">
							</div>

							<div class="form-group col-md-6">
								<label for="add_receipt" class="col-form-label">Payment Receipt</label>
								<input class="form-control" id="files" name="add_receipt" type="file">
								<img id="image" class="mt-2" style="width:25%;">
							</div>

						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary rounded-2" data-bs-dismiss="modal">Cancel</button>
					<button type="button" class="btn btn-primary rounded-2">Create</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-sm-12">
			<div class=" mt-2 " id="multiCollapseExample1">
				<div class="card">
					<div class="card-body">
						<form method="GET" action="#" accept-charset="UTF-8" id="payment_form">
							<div class="row align-items-center justify-content-end">
								<div class="col-xl-10">
									<div class="row">
										<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
											<div class="btn-box">
												<label for="date" class="form-label">Date</label>
												<input class="form-control month-btn flatpickr-input" id="pc-daterangepicker-1" name="date" type="text" value="" readonly="readonly">
											</div>
										</div>
										<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
											<div class="btn-box">
												<label for="account" class="form-label">Account</label>
												<select class="form-control select" id="choices-multiple" name="account">
													<option value="" selected="selected">Select Account</option>
													<option value="51">cash</option>
													<option value="71">ramu</option>
												</select>
											</div>
										</div>
										<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
											<div class="btn-box">
												<label for="vender" class="form-label">Vendor</label>
												<select class="form-control select" id="choices-multiple1" name="vender">
													<option value="" selected="selected">Select Vendor</option>
													<option value="8">Supplier 1</option>
												</select>
											</div>
										</div>
										<div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
											<div class="btn-box">
												<label for="category" class="form-label">Category</label>
												<select class="form-control select" id="choices-multiple2" name="category">
													<option value="" selected="selected">Select Category</option>
												</select>
											</div>
										</div>
									</div>
								</div>
								<div class="col-auto mt-4">
									<div class="row">
										<div clas="col-auto">
											<a href="#" class="btn btn-sm btn-primary" onclick="document.getElementById('payment_form').submit(); return false;" data-toggle="tooltip" title="Apply" data-original-title="apply">
												<span class="btn-inner--icon">
													<i class="bi bi-search"></i>
												</span>
											</a>

											<a href="#" class="btn btn-sm btn-danger" data-bs-toggle="tooltip" title="" data-bs-original-title="Reset">
												<span class="btn-inner--icon">
													<i class="bi bi-trash"></i>
												</span>
											</a>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>

				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-body">
					<table id="basic-datatable" class="table table-striped dt-responsive nowrap w-100">
						<thead>
							<tr>
								<th>Date</th>
								<th>Amount</th>
								<th>Account</th>
								<th>Vendor</th>
								<th>Category</th>
								<th>Reference</th>
								<th>Description</th>
								<th>Payment Receipt</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							{# <tr>
																																				<td>Cara Stevens</td>
																																				<td>723 N. Tillamook Street Portland, OR Portland, United States</td>
																																				<td>New York</td>
