{% block pagetitle %}
	<div class"row align-items-center d-flex">
		<div class="col mt-2">
			<div class="float-end mt-3">
				<button type="button" class="p-0 m-0 border-0" data-bs-toggle="modal" data-bs-target="#leads" data-bs-whatever="@mdo">
					<a href="#" data-bs-toggle="tooltip" title="" class="btn btn-sm btn-primary" data-bs-original-title="Import">
						<i class="bi bi-plus"></i>
					</a>
				</button>
			</div>
		</div>
		<div class="col auto">
			{{ include('partials/page-title.html.twig', { sub_title: 'Leads', page_title: 'Leads' }) }}
		</div>
	</div>
	<div class="modal fade rounded-3" id="leads" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog rounded-3">
			<div class="modal-content rounded-3">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Create Customer</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="modal-body">
						<div class="row">
							<div class="col-6 form-group">
								<label for="subject" class="form-label">Subject</label>
								<input class="form-control" required="required" name="subject" type="text" id="subject">
							</div>
							<div class="col-6 form-group">
								<label for="user_id" class="form-label">User</label>
								<select class="form-control select" required="required" id="user_id" name="user_id">
									<option value="" selected="selected">Select User</option>
									<option value="132">Saleem Shahzad</option>
									<option value="134">William Ndubuisi</option>
								</select>
							</div>
							<div class="col-6 form-group">
								<label for="name" class="form-label">Name</label>
								<input class="form-control" required="required" name="name" type="text" id="name">
							</div>
							<div class="col-6 form-group">
								<label for="email" class="form-label">Email</label>
								<input class="form-control" required="required" name="email" type="text" id="email">
							</div>
							<div class="col-6 form-group">
								<label for="phone" class="form-label">Phone</label>
								<input class="form-control" required="required" name="phone" type="text" id="phone">
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary rounded-2" data-bs-dismiss="modal">Cancel</button>
					<button type="button" class="btn btn-primary rounded-2">Create</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

