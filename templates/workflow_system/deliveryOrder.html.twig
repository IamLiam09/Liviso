{% block pagetitle %}
	<div class"row align-items-center d-flex">
		<div class="col mt-2">
			<div class="float-end mt-3">
				<button type="button" class="p-0 m-0 border-0" data-bs-toggle="modal" data-bs-target="#client" data-bs-whatever="@mdo">
					<a href="#" data-bs-toggle="tooltip" title="" class="btn btn-sm btn-primary" data-bs-original-title="Import">
						<i class="bi bi-plus"></i>
					</a>
				</button>
			</div>
		</div>
		<div class="col auto">
			{{ include('partials/page-title.html.twig', { sub_title: 'Delivery Order', page_title: 'Delivery Order' }) }}
		</div>
	</div>
	<form id="deliveryOrder" method="post" action="{{path("workflowsystem/deliveryorder")}}" name="deliveryOrder">
		<div class="modal fade rounded-3" id="client" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog rounded-3">
				<div class="modal-content rounded-3">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Create</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div
						class="modal-body">
						{# first row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="DONumber" class="form-label m-0">DO Number</label>
									<select class="form-control select3 m-0" id="DONumber" name="DONumber">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="salesOrder" class="form-label m-0">Sales Order</label>
									<select class="form-control select3 m-0" id="salesOrder" name="salesOrder">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="productCode" class="form-label m-0">Product Code</label>
									<select class="form-control select3 m-0" id="productCode" name="productCode">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>

						</div>
						{# second row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="productName" class="form-label m-0">Product Name</label>
									<select class="form-control select3 m-0" id="productName" name="productName">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="productQty" class="form-label m-0">Product Qty</label>
									<select class="form-control select3 m-0" id="productQty" name="productQty">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="vehicle" class="form-label m-0">Vehicle</label>
									<select class="form-control select3 m-0" id="vehicle" name="vehicle">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>

						</div>
						{# third row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="driver" class="form-label m-0">Driver</label>
									<select class="form-control select3 m-0" id="driver" name="driver">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="helper" class="form-label m-0">Helper</label>
									<select class="form-control select3 m-0" id="helper" name="helper">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary rounded-2" data-bs-dismiss="modal">Cancel</button>
							<button type="button" class="btn btn-primary rounded-2">Create</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
{% endblock %}

