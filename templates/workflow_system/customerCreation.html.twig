{% extends 'partials/layout-vertical.html.twig' %}

{% block title %}Customer Creation
{% endblock %}

{% block css %}
	<!-- Datatables css -->
	<link href="/vendor/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-responsive-bs5/css/responsive.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-fixedcolumns-bs5/css/fixedColumns.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-fixedheader-bs5/css/fixedHeader.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-buttons-bs5/css/buttons.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-select-bs5/css/select.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="https://cdn.jsdelivr.net/npm/select3@4.0.13/dist/css/select2.min.css" rel="stylesheet"/>
{% endblock %}

{% block pagetitle %}
	<div class"row align-items-center d-flex">
		<div class="col mt-2">
			<div class="float-end mt-3">
				<button type="button" class="p-0 m-0 border-0" data-bs-toggle="modal" data-bs-target="#client" data-bs-whatever="@mdo">
					<a href="#" data-bs-toggle="tooltip" title="" class="btn btn-sm btn-primary" data-bs-original-title="Import">
						<i class="bi bi-plus"></i>
					</a>
				</button>
			</div>
		</div>
		<div class="col auto">
			{{ include('partials/page-title.html.twig', { sub_title: 'customer creation', page_title: 'customer creation' }) }}
		</div>
	</div>
		<div class="modal fade rounded-3" id="client" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog rounded-3">
				<div class="modal-content rounded-3">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Create</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body">
						{{form_start(form)}}
							{# first row #}
							<div class="row">
								<div class="col-md-4 mb-1">
									<div class="form-group">
										{{form_row(form.companyName)}}
									</div>
								</div>
								<div class="col-md-4 mb-1">
									<div class="form-group">
										{{form_row(form.companyAddress)}}
									</div>
								</div>
								<div class="col-md-4 mb-1">
									<div class="form-group">
										{{form_row(form.country)}}
									</div>
								</div>
							</div>
							{# second row #}
							<div class="row">
								<div class="col-md-4 mb-1">
									<div class="form-group">
										{{form_row(form.authorizedPerson)}}
									</div>
								</div>
								<div class="col-md-4 mb-1">
									<div class="form-group">
										{{form_row(form.phoneNumber)}}
									</div>
								</div>
								<div class="col-md-4 mb-1">
									<div class="form-group">
										{{form_row(form.contactEmail)}}
									</div>
								</div>


							</div>
							{# thrid row #}
							<div class="row">
								<div class="col-md-4 mb-1">
									<div class="form-group">
										{{form_row(form.branch1)}}
									</div>
								</div>
								<div class="col-md-4 mb-1">
									<div class="form-group">
										{{form_row(form.branch2)}}
									</div>
								</div>
								<div class="col-md-4 mb-1">
									<div class="form-group">
										{{form_row(form.preferredDeliveryLocation)}}
									</div>
								</div>
							</div>
							{# fourth row #}
							<div class="row">
								<div class="col-md-4 mb-1">
									<div class="form-group">
										{{form_row(form.contactNumberOfReceiver)}}
									</div>
								</div>
								<div class="col-md-4 mb-1">
									<div class="form-group">
										{{form_row(form.tradeLicense)}}
									</div>
								</div>
								<div class="col-md-4 mb-1">
									<div class="form-group">
										{{form_row(form.partnerPassportId)}}
									</div>
								</div>
								<div class="col-md-4 mb-1">
									<div class="form-group">
										{{form_row(form.creditTerms)}}
									</div>
							    </div>
							</div>
						</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary rounded-2" data-bs-dismiss="modal">Cancel</button>
						<button type="submit" class="btn btn-primary rounded-2">Create</button>
					</div>
					{{form_end(form)}}
			    </div>
		    </div>
	    </div>
	</div>
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-body">
					<table id="basic-datatable" class="table table-striped dt-responsive nowrap w-100">
						<thead>
							<tr>
								<th>Company Name</th>
								<th>Address</th>
								<th>Country</th>
								<th>Authorized Person</th>
								<th>Contact Number</th>
								<th>Contact Email ID</th>
								<th>Branch 1</th>
								<th>Branch 2</th>
								<th>Preferred Delivery Location</th>
								<th>Contact Number Of Receiver</th>
								<th>Trade License</th>
								<th>Partners Passort/ID</th>
								<th>Credit Terms</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							{% for customerCreate in customerCreates %}
									<tr>
										<td>{{customerCreate.companyName}}</td>
										<td>{{customerCreate.companyAddress}}</td>
										<td>{{customerCreate.country}}</td>
										<td>{{customerCreate.authorizedPerson}}</td>
										<td>{{customerCreate.phoneNumber}}</td>
										<td>{{customerCreate.contactEmail}}</td>
										<td>{{customerCreate.branch1}}</td>
										<td>{{customerCreate.branch2}}</td>
										<td>{{customerCreate.preferredDeliveryLocation}}</td>
										<td>{{customerCreate.contactNumberOfReceiver}}</td>
										<td>{{customerCreate.tradeLicense}}</td>
										<td>{{customerCreate.partnerPassportId}}</td>
										<td>{{customerCreate.creditTerms}}</td>
											<td class="">
											<div class="d-flex justify-content-center align-items-center gap-2">
												<button type="button" class="p-0 m-0 border-0 open-edit-modal">
													<a href="{{ path('customer_create_edit', {'id': customerCreate.id, 'user_id': app.user.id}) }}" data-bs-toggle="tooltip" title="" class="p-1 rounded-3 bg-info text-white border-0" data-bs-original-title="Edit">
														<i class="bi bi-pen"></i>
													</a>
												</button>
												<a href="{{ path('customer_create_delete', {'id': customerCreate.id, 'user_id': app.user.id}) }}" class="p-1 rounded-3 bg-danger text-white border-0">
													<i class="bi bi-trash"></i>
												</a>
											</div>
										</td>
									</tr>
							{% endfor %}
						</tbody>
					</table>

				</div>
				<!-- end card body-->
			</div>
			<!-- end card -->
		</div>
		<!-- end col-->
	</div>
{% endblock %}

