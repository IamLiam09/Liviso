{% block pagetitle %}
	<div class"row align-items-center d-flex">
		<div class="col mt-2">
			<div class="float-end mt-3">
				<button type="button" class="p-0 m-0 border-0" data-bs-toggle="modal" data-bs-target="#client" data-bs-whatever="@mdo">
					<a href="#" data-bs-toggle="tooltip" title="" class="btn btn-sm btn-primary" data-bs-original-title="Import">
						<i class="bi bi-plus"></i>
					</a>
				</button>
			</div>
		</div>
		<div class="col auto">
			{{ include('partials/page-title.html.twig', { sub_title: 'supplier creation', page_title: 'Supplier Creation' }) }}
		</div>
	</div>
	<form id="supplierCreation" method="post" action="{{path("zoom_create")}}" name="supplierCreation">
		<div class="modal fade rounded-3" id="client" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog rounded-3">
				<div class="modal-content rounded-3">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Create</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div
						class="modal-body">
						{# first row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="code" class="form-label m-0">Code</label>
									<select class="form-control select code m-0" id="code" data-toggle="select" name="code">
										<option value="" selected="selected">Auto</option>
										{# <option value="9">Automatic</option> #}
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="type" class="form-label m-0">Type</label>
									<select class="form-control select type m-0" id="type" data-toggle="select" name="type">
										<option value="" selected="selected">Local</option>
										<option value="">International</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="name" class="form-label m-0">Name</label>
									<input class="form-control" placeholder="Enter Name" required="required" name="name" type="name" value="" id="name">
								</div>
							</div>
						</div>
						{# second row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="address" class="form-label m-0">Address</label>
									<input class="form-control" placeholder="Enter Address" required="required" address="address" type="address" value="" id="address">
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="countrySupplier" class="form-label m-0">Country</label>
									<select class="form-control select3 m-0" id="countrySupplier" name="country"></select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="currencySupplier" class="form-label m-0">Currency</label>
									<select class="form-control select3 m-0" id="currencySupplier" name="currency"></select>
								</div>
							</div>
						</div>
						{# thrid row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="productCategory" class="form-label m-0">Product Category</label>
									<select class="form-control select3 m-0" id="productCategory" name="productCategory">
										<option value="" selected="selected">Auto</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="productSubCategory" class="form-label m-0">Product Sub Category</label>
									<select class="form-control select3 m-0" id="productSubCategory" name="productSubCategory">
										<option value="" selected="selected">Auto</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="price" class="form-label m-0">Price Type</label>
									<select class="form-control select3 m-0" id="price" name="price">
										<option value="" selected="selected">FOB</option>
										<option value="" selected="selected">Ex Works</option>
										<option value="" selected="selected">CIF</option>
									</select>
								</div>
							</div>
						</div>
						{# fourth row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="paymentMode" class="form-label m-0">Payment Mode</label>
									<select class="form-control select3 m-0" id="paymentMode" name="paymentMode">
										<option value="" selected="selected">Cash</option>
										<option value="" selected="selected">Supplier Credit</option>
										<option value="" selected="selected">Credit Card</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="uOM" class="form-label m-0">Unit Of Measurement</label>
									<select class="form-control select3 m-0" id="uOM" name="uOM">
										<option value="" selected="selected">Kilo</option>
										<option value="" selected="selected">Pound</option>
										<option value="" selected="selected">Pieces</option>
										<option value="" selected="selected">Cartons</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="shipmentMode" class="form-label m-0">Shipment Mode</label>
									<select class="form-control select3 m-0" id="shipmentMode" name="shipmentMode">
										<option value="" selected="selected">Air</option>
										<option value="" selected="selected">Sea</option>
										<option value="" selected="selected">Land</option>
									</select>
								</div>
							</div>
						</div>
						{# fifth row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="supplierProductCode" class="form-label m-0">Supplier Product Code</label>
									<input class="form-control" placeholder="Enter product code" required="required" name="supplierProductCode" type="supplierProductCode" value="" id="supplierProductCode">
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="supplierProductname" class="form-label m-0">Supplier Product Name</label>
									<input class="form-control" placeholder="Enter product name" required="required" name="supplierProductname" type="supplierProductname" value="" id="supplierProductname">
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="supplierPrice" class="form-label m-0">Supplier Price</label>
									<input class="form-control" placeholder="Enter supplierPrice" required="required" name="supplierPrice" type="supplierPrice" value="" id="supplierPrice">
								</div>
							</div>
						</div>
						{# sixth row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="brandProductDescription" class="form-label m-0">Brand Product Description</label>
									<input class="form-control" placeholder="Enter product descriptionm" required="required" name="brandProductDescription" type="brandProductDescription" value="" id="brandProductDescription">
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="productImages" class="form-label m-0">Product Images</label>
									<input class="form-control" placeholder="Enter product name" required="required" name="productImages" type="file" value="" id="productImages">
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="brandProductName" class="form-label m-0">Brand Product Name</label>
									<input class="form-control" placeholder="Enter brandProductName" required="required" name="brandProductName" type="brandProductName" value="" id="brandProductName">
								</div>
							</div>
						</div>
						{# seventh row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="brandProductCode" class="form-label m-0">Brand Product Code</label>
									<input class="form-control" placeholder="Enter product code" required="required" name="brandProductCode" type="brandProductCode" value="" id="brandProductCode">
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="brandName" class="form-label m-0">Brand  Name</label>
									<input class="form-control" placeholder="Enter brand name" required="required" name="brandName" type="text" value="" id="brandName">
								</div>
							</div>

						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary rounded-2" data-bs-dismiss="modal">Cancel</button>
						<button type="button" class="btn btn-primary rounded-2">Create</button>
					</div>
				</div>
			</div>
		</div>

	</form>
{% endblock %}

