{% block pagetitle %}
	<div class"row align-items-center d-flex">
		<div class="col mt-2">
			<div class="float-end mt-3">
				<button type="button" class="p-0 m-0 border-0" data-bs-toggle="modal" data-bs-target="#client" data-bs-whatever="@mdo">
					<a href="#" data-bs-toggle="tooltip" title="" class="btn btn-sm btn-primary" data-bs-original-title="Import">
						<i class="bi bi-plus"></i>
					</a>
				</button>
			</div>
		</div>
		<div class="col auto">
			{{ include('partials/page-title.html.twig', { sub_title: 'product master', page_title: 'Product Master' }) }}
		</div>
	</div>
	<form id="Product Master" method="post" action="{{path("zoom_create")}}" name="Product Master">
		<div class="modal fade rounded-3" id="client" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog rounded-3">
				<div class="modal-content rounded-3">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Create</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div
						class="modal-body">
						{# first row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="productMaster" class="form-label m-0">Product ID</label>
									<input class="form-control" placeholder="Enter product id" required="required" name="productMaster" type="text" value="" id="productMaster"/>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="brandName" class="form-label m-0">Brand Name</label>
									<select class="form-control select3 m-0" id="brandName" name="brandName"></select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="productName" class="form-label m-0">Product Name</label>
									<input class="form-control" placeholder="Enter product name" required="required" name="productName" type="text" value="" id="productName"/>
								</div>
							</div>
						</div>
						{# second row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="productCode" class="form-label m-0">Product Code</label>
									<input class="form-control" placeholder="Enter product Code" required="required" name="productCode" type="text" value="" id="productCode"/>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="productCategory" class="form-label m-0">Product Category</label>
									<select class="form-control select3 m-0" id="productCategory" name="productCategory">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="productSubCategory" class="form-label m-0">Product Sub Category</label>
									<select class="form-control select3 m-0" id="productSubCategory" name="productSubCategory">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
						</div>
						{# thrid row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="productBarcode" class="form-label m-0">Product Barcode</label>
									<input class="form-control" placeholder="Enter product code" required="required" name="productBarcode" type="text" value="" id="productBarcode"/>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="supplierType" class="form-label m-0">Supplier Type</label>
									<select class="form-control select3 m-0" id="supplierType" name="supplierType">
										<option value="0">Local</option>
										<option value="1">International</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="supplierName&Address" class="form-label m-0">Supplier Type</label>
									<select class="form-control select3 m-0" id="supplierName&Address" name="supplierName&Address">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
						</div>
						{# fourth row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="supplierCurrency" class="form-label m-0">Supplier Currency</label>
									<select class="form-control select3 m-0" id="supplierCurrency" name="supplierCurrency">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="supplierProductCode" class="form-label m-0">Supplier Product Code</label>
									<select class="form-control select3 m-0" id="supplierProductCode" name="supplierProductCode">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="
																																																	supplierProductName" class="form-label m-0">Partner Passport/ID</label>
									<select class="form-control select3 m-0" id="supplierProductName" name="supplierProductName">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
						</div>
						{# fifth row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="
																																																	supplierCountry" class="form-label m-0">Supplier Country</label>
									<select class="form-control select3 m-0" id="supplierCountry" name="supplierCountry">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="supplierPrice" class="form-label m-0">Supplier Price</label>
									<input class="form-control" placeholder="Enter price" required="required" name="supplierPrice" type="number" value="" id="supplierPrice"/>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="
																																																	priceType" class="form-label m-0">Price Type</label>
									<select class="form-control select3 m-0" id="priceType" name="priceType">
										<option value="0">FOB</option>
										<option value="1">Ex Works</option>
										<option value="2">CIF</option>
										<option value="3">Cash</option>
										<option value="4">Supplier Credit</option>
										<option value="5">Credit Card</option>
									</select>
								</div>
							</div>
						</div>
						{# sixth row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="
																																																	productDescription" class="form-label m-0">Product Description</label>
									<select class="form-control select3 m-0" id="productDescription" name="productDescription">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="
																																																	unitOfMeasurement" class="form-label m-0">Unit Of Measurement</label>
									<select class="form-control select3 m-0" id="unitOfMeasurement" name="unitOfMeasurement">
										<option value="0">Kilo</option>
										<option value="1">Pounds</option>
										<option value="2">Pieces</option>
										<option value="3">Cartons</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="
																																																	shipmentMode" class="form-label m-0">Shipment Mode</label>
									<select class="form-control select3 m-0" id="shipmentMode" name="priceType">
										<option value="0">Air</option>
										<option value="1">Sea</option>
										<option value="2">Land</option>
									</select>
								</div>
							</div>
						</div>
						{# seventh row #}
						<div class="row">
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="productImages" class="form-label m-0">Product Images</label>
									<input class="form-control select3 m-0" id="productImages" name="productImages" type="file"/>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="presentStock" class="form-label m-0">Present Stock</label>
									<select class="form-control select3 m-0" id="presentStock" name="presentStock">
										<option value="0">Auto</option>
									</select>
								</div>
							</div>
							<div class="col-md-4 mb-1">
								<div class="form-group">
									<label for="
																																															shipmentMode" class="form-label m-0">Shipment Mode</label>
									<select class="form-control select3 m-0" id="shipmentMode" name="priceType">
										<option value="0">Air</option>
										<option value="1">Sea</option>
										<option value="2">Land</option>
									</select>
								</div>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary rounded-2" data-bs-dismiss="modal">Cancel</button>
						<button type="button" class="btn btn-primary rounded-2">Create</button>
					</div>
				</div>
			</div>
		</div>

	</form>
{% endblock %}
