	<div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5 position-relative">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-xxl-4 col-lg-5">
					<div
						class="card">

						<!-- Logo -->
						<div class="card-header pt-4 text-center">
							<div class="auth-brand mb-0">
								<div class="logo-dark">
									<span><img src="/images/logo-dark.png" alt="dark logo" height="28"></span>
								</div>

							</div>
						</div>

						<div class="card-body p-4">

							<div class="text-center w-75 m-auto">
								<h4 class="text-dark-50 text-center mt-0">Sign Up</h4>
							</p>
						</div>

						{{ form_errors(registrationForm) }}

						{{ form_start(registrationForm) }}
						{{ form_widget(registrationForm._token) }}

						<div class="mb-3">
							{{ form_label(registrationForm.fullName, 'Full Name', {'label_attr': {'for': 'fullName', 'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.fullName, { 'attr': {'class': 'form-control', 'placeholder': 'Enter your name', 'id': 'fullName'} }) }}
						</div>

						<div class="mb-3">
							{{ form_label(registrationForm.email, null, {'label_attr': {'for': 'email', 'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control', 'placeholder': 'Enter your email', 'id': 'email', 'required': 'required'} }) }}
						</div>
						<div class="error">
							{{ form_errors(registrationForm.email) }}
						</div>

						<div class="mb-3">
							{{ form_label(registrationForm.companyName, 'Company Name', {'label_attr': {'for': 'companyName', 'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.companyName, { 'attr': {'class': 'form-control', 'placeholder': 'Enter your Company Name', 'id': 'companyName', 'required': 'required'} }) }}
						</div>

						<div class="mb-3">
							{{ form_label(registrationForm.location, null, {'label_attr': {'for': 'location', 'class': 'form-label'}}) }}
							<div
								class="d-flex align-items-center">
								<!-- The location form field -->
								{{ form_widget(registrationForm.location, { 'attr': {'class': 'form-select', 'id': 'location', 'required': 'required'} }) }}
								<!-- The flag image -->
								{% if countryFlag %}
									<div class="flag-border">
										<img id="countryFlag" src="{{ countryFlag }}" alt="{{ countryName }} Flag">
									</div>
								{% endif %}
							</div>
						</div>

						<div class="mb-3">
							{{ form_label(registrationForm.plainPassword.first, 'Password', {'label_attr': {'for': 'password', 'class': 'form-label'}}) }}
							<div class="input-group input-group-merge">
								{{ form_widget(registrationForm.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Enter your password', 'id': 'password'} }) }}
								<br>
							</div>
							<div class="error">
								{{ form_errors(registrationForm.plainPassword.first) }}
							</div>
							<br>
							{{ form_label(registrationForm.plainPassword.second, 'Repeat Password', {'label_attr': {'for': 'password_repeat', 'class': 'form-label'}}) }}
							<div class="input-group input-group-merge">
								{{ form_widget(registrationForm.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Repeat your password', 'id': 'password_repeat'} }) }}
								<br>
							</div>
							<div class="error">
								{{ form_errors(registrationForm.plainPassword.second) }}
							</div>
						</div>

						<div class="Tocheck">
							{{ form_row(registrationForm.agreeTerms) }}
						</div>


						<div class="mb-3 text-center">
							<button class="btn btn-primary" type="submit">
								Sign Up
							</button>
						</div>
						{{ form_end(registrationForm) }}

					</div>
					<!-- end card-body -->
				</div>
				<!-- end card -->

				<div class="row mt-3">
					<div class="col-12 text-center">
						<p class="text-white-50">Already have account?
							<a href="{{path("login")}}" class="text-white ms-1 link-offset-3 text-decoration-underline">
								<b>Log In</b>
							</a>
						</p>
					</div>
					<!-- end col-->
				</div>
				<!-- end row -->

			</div>
			<!-- end col -->
		</div>
		<!-- end row -->
