{% extends 'partials/layout-vertical.html.twig' %}

{% block title %}Training List
{% endblock %}

{% block css %}
	<!-- Datatables css -->
	<link href="/vendor/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-responsive-bs5/css/responsive.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-fixedcolumns-bs5/css/fixedColumns.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-fixedheader-bs5/css/fixedHeader.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-buttons-bs5/css/buttons.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
	<link href="/vendor/datatables.net-select-bs5/css/select.bootstrap5.min.css" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block pagetitle %}
	<div class"row align-items-center d-flex">
		<div class="col mt-2">
			<div class="float-end mt-3">
				<button type="button" class="p-0 m-0 border-0" data-bs-toggle="modal" data-bs-target="#trainingList" data-bs-whatever="@mdo">
					<a href="#" data-bs-toggle="tooltip" title="" class="btn btn-sm btn-primary" data-bs-original-title="Import">
						<i class="bi bi-plus"></i>
					</a>
				</button>
			</div>
		</div>
		<div class="col auto">
			{{ include('partials/page-title.html.twig', { sub_title: 'Training List', page_title: 'Training List' }) }}
		</div>
	</div>
	<div class="modal fade rounded-3" id="trainingList" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog rounded-3">
			<div class="modal-content rounded-3">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Create New Training</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="modal-body">
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<label for="branch" class="form-label">Branch</label>
									<select class="form-control select" required="required" id="branch" name="branch"></select>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="trainer_option" class="form-label">Trainer Option</label>
									<select class="form-control select" required="required" id="trainer_option" name="trainer_option">
										<option value="0">Internal</option>
										<option value="1">External</option>
									</select>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="training_type" class="form-label">Training Type</label>
									<select class="form-control select" required="required" id="training_type" name="training_type"></select>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="trainer" class="form-label">Trainer</label>
									<select class="form-control select" required="required" id="trainer" name="trainer"></select>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="training_cost" class="form-label">Training Cost</label>
									<input class="form-control" step="0.01" required="required" name="training_cost" type="number" id="training_cost">
								</div>
							</div>
							<div class="col-md-12">
								<div class="form-group">
									<label for="employee" class="form-label">Employee</label>
									<select class="form-control select" required="required" id="employee" name="employee">
										<option value="32">Saleem Shahzad</option>
										<option value="33">William Ndubuisi</option>
									</select>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="start_date" class="form-label">Start Date</label>
									<input class="form-control " name="start_date" type="date" id="start_date">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="end_date" class="form-label">End Date</label>
									<input class="form-control " name="end_date" type="date" id="end_date">
								</div>
							</div>
							<div class="form-group col-lg-12">
								<label for="description" class="form-label">Description</label>
								<textarea class="form-control" placeholder="Description" name="description" cols="50" rows="10" id="description"></textarea>
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary rounded-2" data-bs-dismiss="modal">Cancel</button>
					<button type="button" class="btn btn-primary rounded-2">Create</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-body">
					<table id="basic-datatable" class="table table-striped dt-responsive nowrap w-100">
						<thead>
							<tr>
								<th>Branch</th>
								<th>Training Type</th>
								<th>Status</th>
								<th>Employee Trainer</th>
								<th>Training Duration</th>
								<th>Cost</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							{# <tr>
																						<td>Cara Stevens</td>
